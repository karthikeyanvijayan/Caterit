<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="karthik.com.caterit.Activities.ForgotPasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="@dimen/_15sdp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvForgot"/>
    
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_close"
        android:id="@+id/btnForgotClose"
        android:layout_margin="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgot">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/forgotPwIcon"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_mail" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/forgot_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotPwIcon"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/textForgotPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Email"
                android:inputType="text"
                android:lines="1" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@id/forgot_text_input_layout"
            android:layout_margin="10dp"
            android:id="@+id/tvForgotDesc"
            android:text="We will email you instructions on how to reset your password" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="RESET"
        android:textColor="@color/white" />


</RelativeLayout>
