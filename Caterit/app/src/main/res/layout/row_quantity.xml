<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyQuantity"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tvMenuPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnQuantityAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPink300"
            android:text="+" />

        <TextView
            android:id="@+id/tvAddQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPinkLight"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textAlignment="center"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnQuantityMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPink300"
            android:text="-" />


    </LinearLayout>
</LinearLayout>