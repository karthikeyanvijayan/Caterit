<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="karthik.com.caterit.Activities.OrderCompleteActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_add_shopping_cart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/imageOrderComplete"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Thank You!"
        android:id="@+id/tvThankyou"
        android:layout_margin="20dp"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/imageOrderComplete"
        android:textSize="@dimen/_25sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_complete_desc"
        android:layout_below="@id/tvThankyou"
        android:textAlignment="center"
        android:textSize="@dimen/_13sdp"
        android:layout_margin="10dp"
        android:textColor="@color/secondary_text"/>
    

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:text="OK"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
